############################################
# Wiki.js Instance: {{ item.name }}
############################################

# =====================
# Base de données 
# =====================
DB_TYPE=postgres
DB_HOST={{ item.pg_host }}
DB_PORT=5432
DB_SSL=true   # Force la connexion chiffrée
DB_SSL_CA=/certs/rds-ca-bundle.pem   
DB_SSL_REJECT_UNAUTHORIZED=true   
NODE_EXTRA_CA_CERTS=/certs/rds-ca-bundle.pem

# =====================
# Authentification OIDC (Keycloak)
# =====================
OIDC_ENABLED=true
OIDC_CLIENT_ID=wiki-{{ item.name }}
OIDC_CLIENT_SECRET={{ kc_clients['wiki-' ~ item.name] }}
OIDC_ISSUER=https://sso.{{ base_domain }}/realms/saas
OIDC_SCOPE=openid profile email
OIDC_AUTO_CREATE_USERS=true
OIDC_GROUPS_CLAIM=groups

# =====================
# Stockage (Cloudflare R2)
# =====================
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID={{ s3_access_key }}
AWS_SECRET_ACCESS_KEY={{ s3_secret_key }}
AWS_ENDPOINT=https://wikijs-uploads.d5750627b9b12170d48dcdf9a55fb164.r2.cloudflarestorage.com
AWS_REGION=auto
S3_BUCKET=wikijs-uploads
S3_FORCE_PATH_STYLE=true

# =====================
# Application
# =====================
PORT=3000
BASE_URL=https://{{ item.name }}.{{ base_domain }}
ADMIN_EMAIL={{ item.admin_email }}
ADMIN_PASSWORD={{ item.admin_password }}
LOG_LEVEL=info
LOG_PRETTY=true
LOG_FILE_PATH=logs/wikijs.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10
TRUST_PROXY=true  # Activer si derrière un proxy (ex: Cloudflare)           

# =====================
# Domaine
# ===================== 
DOMAIN={{ base_domain }}